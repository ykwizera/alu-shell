#!/usr/bin/env bash
#managing file manage_my_process
pidfile="/var/run/my_process.pid"
manageprocess="/alu-shell/processes_and_signals/manage_my_process"
start (){
	if [ -f "$pidfile" ]; then
        echo "PID: $(cat $pidfile)"
    else
        $manageprocess start
    fi
}
stop (){
	if [ -f "$pidfile" ]; then
$manageprocess stop 
rm "$pidfile"
	fi
}
restart (){
	if [ -f "$pidfile" ]; then
$manageprocess stop 
rm "$pidfile"
	fi
$manageprocess start 
echo "$$" > "$pidfile"
}
case "$1" in 
	start)
		start
	 echo 'manage_my_process started'
		;;
	stop)
		stop
		echo 'manage_my_process stopped'
		;;
	restart)
		restart
	 echo 'manage_my_process restarted'
		;;
	*)
		echo 'Usage: manage_my_process {start|stop|restart}'
esac
