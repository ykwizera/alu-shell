#!/usr/bin/env bash
#managing file manage_my_process
pidfile="/var/run/my_process.pid"
manageprocess="/alu-shell/processes_and_signals/manage_my_process"
start (){
	if [ -f "$pidfile" ]; then
$manageprocess start 
echo "$$" > "$pidfile"
echo 'manage_my_process started'
	fi
}
stop (){
	if [ -f "$pidfile" ]; then
$manageprocess stop 
rm "$pidfile"
echo 'manage_my_process stopped'
	fi
}
restart (){
	if [ -f "$pidfile" ]; then
$manageprocess stop 
rm "$pidfile"
	fi
$manageprocess start 
echo "$$" > "$pidfile"
echo 'manage_my_process restarted'
}
case "$1" in 
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		restart
		;;
	*)
		echo 'Usage: manage_my_process {start|stop|restart}'
esac
