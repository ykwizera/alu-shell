#!/usr/bin/env bash
#managing file manage_my_process
pidfile="/var/run/my_process.pid"
manageprocess="/alu-shell/processes_and_signals/manage_my_process"
start (){
$manageprocess start 
echo "$$" > "$pidfile"
echo 'manage_my_process started'
}
stop (){
$manageprocess stop 
rm "$pidfile"
echo 'manage_my_process stopped'
}
restart (){
$manageprocess stop 
rm "$pidfile"
$manageprocess start 
echo "$$" > "$pidfile"
echo 'manage_my_process restarted'
}
case "$1" in 
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		restart
		;;
	*)
		echo 'Usage: manage_my_process {start|stop|restart}'
esac
